<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2.0dip"
    app:cardUseCompatPadding="true"
    app:elevation="2.0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/badminton_match_location_list"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="TextView" />

        <View
            android:layout_width="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="#636363"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/badminton_match_date_list"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="TextView" />

        <View
            android:layout_width="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="#636363"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/match_set_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="TextView" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#636363"
        android:paddingBottom="10dp" />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/badminton_team1"
                        android:layout_gravity="center_vertical"
                        android:text="Team1"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:id="@+id/badminton_team1_serve"
                        android:layout_height="30dp"
                        android:src="@mipmap/shuttlecock_50px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/badminton_team2"
                        android:layout_gravity="center_vertical"
                        android:text="Team2"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:id="@+id/badminton_team2_serve"
                        android:layout_height="30dp"
                        android:src="@mipmap/shuttlecock_50px"/>

                </LinearLayout>

            </LinearLayout>

            <GridView
                android:id="@+id/badminton_team_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="5"
                android:horizontalSpacing="10dp"
                android:layout_marginStart="30dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>